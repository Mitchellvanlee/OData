<UserControl x:Class="SilverlightAstoriaTest.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="600" Height="600">
    <Grid x:Name="LayoutRoot" Background="AliceBlue" >
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="400" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="0">Connection to Message Queue</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="MQConnectionStatus">Inconclusive</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0">Polling For Messages</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="PollingStatus">Inconclusive</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="0">Current Test Status</TextBlock>
        <TextBlock Grid.Row="4" Grid.Column="0" x:Name="TestStatus" TextWrapping="Wrap"  >Inconclusive</TextBlock>
    </Grid>
</UserControl>
